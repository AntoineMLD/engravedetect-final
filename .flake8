[flake8]
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    venv,
    backups,
    .venv
max-line-length = 100
ignore = E203, W503, E501, F401
per-file-ignores =
    __init__.py:F401
max-complexity = 10

# Configuration for flake8-black
extend-ignore = E203
black-config = pyproject.toml 